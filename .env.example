# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:29092

# Eureka Configuration
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# Mail Configuration (Notification Service)
# IMPORTANT: Keep these credentials secure and never commit them to version control
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_FROM_NAME=FoodExpress

# Instructions for Gmail:
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate an App Password for "Mail"
# 4. Use the generated 16-character password (without spaces) as MAIL_PASSWORD
# 5. Copy this file to .env and update with your credentials

# Razorpay Configuration (Payment Service)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe Configuration (Payment Service - Alternative)
# Get your keys from: https://dashboard.stripe.com/test/apikeys
# Sign up at: https://stripe.com (free)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CURRENCY=usd
